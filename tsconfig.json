{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2020",
      "DOM"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/home/*": ["./src/component/mainpage/home/*"],
      "@/about/*": ["./src/component/mainpage/aboutus/*"],
      "@/customer/*": ["./src/component/mainpage/customercenter/*"],
      "@/ui/*": ["./src/component/ui/*"]
    },
    "types": ["kakao.maps.d.ts"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/component/util/ImageLoader.js"
  ],
  "exclude": ["node_modules"]
}
